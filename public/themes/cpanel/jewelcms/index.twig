{% extends "core/base.twig" %}

{% block cp_content %}

    <h1 class="page-header">Dashboard</h1>

    {% if Page.ArticleCount == 1 %}
        {% set ArticleDesc = 'article' %}
    {% else %}
        {% set ArticleDesc = 'articles' %}
    {% endif %}
    {% if Page.UserCount == 1 %}
        {% set UserDesc = 'user' %}
    {% else %}
        {% set UserDesc = 'users' %}
    {% endif %}
    {% if Page.SiteFileCount == 1 %}
        {% set SiteFileDesc = 'file' %}
    {% else %}
        {% set SiteFileDesc = 'files' %}
    {% endif %}

    <div class="row">

        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2><i class="fa fa-bar-chart"></i> Overview</h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-2">
                            <span class="lead">{{ Page.ArticleCount }}</span>
                        </div>
                        <div class="col-md-2">
                            <span style="vertical-align: middle;">
                            {% if Auth.CanWriteContent %}
                                <a href="{{ cpLink('articles') }}">{{ ArticleDesc }}</a>
                            {% else %}
                                {{ ArticleDesc }}
                            {% endif %}
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-2">
                            <span class="lead">{{ Page.UserCount }}</span>
                        </div>
                        <div class="col-md-2">
                            <span style="vertical-align: middle;">
                            {% if Auth.IsAdmin %}
                                <a href="{{ cpLink('users', {'action': 'showall'}) }}">{{ UserDesc }}</a>
                            {% else %}
                                {{ ArticleDesc }}
                            {% endif %}
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-2">
                            <span class="lead">{{ Page.SiteFileCount }}</span>
                        </div>
                        <div class="col-md-2">
                            <span style="vertical-align: middle;">
                                {{ SiteFileDesc }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2><i class="fa fa-wrench"></i> Tools</h2>
                </div>
                <div class="panel-body">
                    <ul>
                        <li><a href="{{ Page.SitemapUrl }}" target="_blank">Sitemap</a> <i class="fa fa-external-link"></i></li>
                    </ul>
                </div>
            </div>

        </div>

        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2><i class="fa fa-user"></i> My Profile</h2>
                </div>
                <div class="panel-body">
                    <ul>
                        <li><a href="{{ cpLink('edit_profile') }}">Edit Profile</a></li>
                        <li><a href="{{ cpLink('change_password') }}">Change Password</a></li>
                        <li><a href="{{ cpLink('manage_avatars') }}">Manage Avatars</a></li>
                    </ul>
                </div>
            </div>

        </div>

    </div>

