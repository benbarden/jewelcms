<h2>Recent content</h2>
{% set ContentRecent = cmsDataContentRecent(5) %}
{% if ContentRecent %}
    {% for Item in ContentRecent %}
        <strong>{{ cmsFormatDate(Item.getCreateDate, 'D jS M') }}</strong>:
        <a href="{{ Item.getPermalink }}">{{ Item.getTitle }}</a>
        <br>
    {% endfor %}
{% else %}
    <p>No recent content!</p>
{% endif %}